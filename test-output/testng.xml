<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="InvoiceAutomationSuite" verbose="1" parallel="false">
	
	<listeners>
		<listener class-name="utilities.ExtentReportManager"/>
	</listeners>
	
	<parameter name="os" value="windows"></parameter>
	<parameter name="browser" value="chrome"></parameter>

    <test thread-count="5" name="RegressionTests">
        <classes>
            <class name="testCases.TC001_LoginPageTest"/>
            <class name="testCases.TC002_DashboardPageTest"/>
            <class name="testCases.TC003_GeneralInvoiceTest"/>
            
        </classes>
    </test>

</suite>
